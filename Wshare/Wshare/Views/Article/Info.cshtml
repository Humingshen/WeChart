        function PostCom() {
            $.post("/api/v2/comment", { contents: $("#js_cmt_input").text(), articleId: $("#articleId").val() },
                function (obj) {
                    if (obj.code == 0) {
                        $("#js_cmt_input").text("");
                        $("#js_cmt_input_holder").show();
                        $("#js_cmt_write1").click();
                        //$("#js_cmt_list").html("");
                        //page = 1;
