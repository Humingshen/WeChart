                        $("#js_like_toast").show();
                        setTimeout(function () { $("#js_like_toast").hide(); }, 2000)
                    }
                });
        }

        function LoadCom() {
            $.get("/api/v2/comments", { articleId: $("#articleId").val(), page: page, limit: limit }, function (obj) {
                if (obj.code == 0) {
                    var html = "";
