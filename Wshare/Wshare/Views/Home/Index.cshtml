@using Wshare.Models;

@{
    ViewBag.Title = "理工毕业设计";

    List<T_Article> Articles = ViewBag.Articles as List<T_Article>;
    List<string> Tags = ViewBag.Tags as List<string>;
}
<style type="text/css">
    .weui-media-box {
        align-items: normal;
    }
</style>
<div class="weui-panel__bd hide" style="width:90%; padding:10px 5%; overflow-x:auto;">
    <ul class="weui-media-box__info" style=" min-width:200%;">
        @{
            <li class="weui-media-box__info__meta">全部</li>
            foreach (var item in Tags)
            {
                <li class="weui-media-box__info__meta">@item</li>
            }
        }
    </ul>
</div>
<div class="weui-panel weui-panel_access">

    <div class="weui-panel__bd">
        @{
            foreach (var item in Articles)
            {
                <a href="~/Article/info/@item.Id" class="weui-media-box weui-media-box_appmsg">
                    <div class="weui-media-box__hd">
                        <img class="weui-media-box__thumb" src="@item.Cover" alt="">
                    </div>
                    <div class="weui-media-box__bd">
                        <h4 class="weui-media-box__title">@item.Title</h4>
                        <p class="weui-media-box__desc">@item.SubTitle</p>
                        <ul class="weui-media-box__info">
                            <li class="weui-media-box__info__meta">@item.Author</li>
                            <li class="weui-media-box__info__meta">@(Lib.DateFormatToString(item.Created))</li>
                            @*<li class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</li>*@
                        </ul>
                    </div>
                </a>
            }
        }
    </div>
    <div class="weui-panel__ft hide">
        <a href="javascript:void(0);" class="weui-cell weui-cell_access weui-cell_link">
            <div class="weui-cell__bd">查看更多</div>
            <span class="weui-cell__ft"></span>
        </a>
    </div>
</div>